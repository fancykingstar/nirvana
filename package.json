{
    "name": "nirvana",
    "scripts": {
        "start": "parcel serve ./src/index.html",
        "build": "NODE_ENV=production parcel build ./src/index.html",
        "format": "eslint . --cache --fix && prettier --write **/*.{js,scss,md,json,html}",
        "lint": "eslint . && prettier --check **/*.{js,scss,md,json}",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.11.5",
        "@babel/preset-react": "^7.10.4",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.10.0",
        "eslint-plugin-react": "^7.21.3",
        "husky": "^4.3.0",
        "jest": "^26.5.2",
        "lint-staged": "^10.4.0",
        "parcel": "^2.0.0-beta.1",
        "prettier": "^2.1.2",
        "sass": "^1.27.0"
    },
    "dependencies": {
        "core-js": "^3.6.5",
        "jwt-decode": "^3.0.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-router": "^5.2.0",
        "react-router-dom": "^5.2.0",
        "styled-components": "^5.2.0",
        "swr": "^0.3.5"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "all",
        "useTabs": false
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.js": "eslint --fix",
        "**/*.{html,js,scss,md,json}": "prettier --write"
    },
    "jest": {
        "testPathIgnorePatterns": [
            "/node_modules/",
            ".tmp",
            ".cache"
        ],
        "testEnvironment": "node"
    },
    "babel": {
        "plugins": [
            "@babel/plugin-syntax-jsx"
        ],
        "presets": [
            "@babel/preset-react",
            [
                "@babel/preset-env",
                {
                    "targets": [
                        "defaults",
                        "not IE 11"
                    ],
                    "corejs": 3,
                    "useBuiltIns": "entry"
                }
            ]
        ]
    }
}
