{
    "name": "nirvana",
    "scripts": {
        "start": "parcel serve ./src/index.html",
        "build": "NODE_ENV=production parcel build ./src/index.html",
        "format": "eslint . --cache --fix && prettier --write **/*.{js,scss,md,json,html}",
        "lint": "eslint . && prettier --check **/*.{js,scss,md,json}",
        "test": "jest --runInBand",
        "test:watch": "jest --watch"
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/preset-env": "^7.11.5",
        "@babel/preset-react": "^7.10.4",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "babel-eslint": "^10.1.0",
        "classnames": "^2.2.6",
        "eslint": "^7.11.0",
        "eslint-plugin-react": "^7.21.3",
        "husky": "^4.3.0",
        "jest": "^26.5.3",
        "lint-staged": "^10.4.0",
        "postcss-modules": "^3.2.2",
        "sass": "^1.27.0",
        "tailwindcss": "^1.9.6",
        "whatwg-fetch": "^3.4.1"
    },
    "dependencies": {
        "babel-core": "^6.26.3",
        "babel-polyfill": "^6.26.0",
        "core-js": "^3.6.5",
        "jwt-decode": "^3.0.0",
        "nanoid": "^3.1.12",
        "parcel-bundler": "^1.12.4",
        "polished": "^4.0.3",
        "prettier": "^2.1.2",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-quill": "^1.3.5",
        "react-router": "^5.2.0",
        "react-router-dom": "^5.2.0",
        "styled-components": "^5.2.0",
        "swr": "^0.3.6",
        "swr-mutate-many": "^1.0.0"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "all",
        "useTabs": false
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.js": "eslint --fix",
        "**/*.{html,js,scss,md,json}": "prettier --write"
    },
    "jest": {
        "testPathIgnorePatterns": [
            "/node_modules/",
            ".tmp",
            ".cache"
        ],
        "setupFilesAfterEnv": [
            "./test/setup.js"
        ],
        "testEnvironment": "jsdom",
        "moduleNameMapper": {
            "\\.(css|less|scss)$": "<rootDir>/test/__mocks__/styleMock.js"
        }
    },
    "babel": {
        "plugins": [
            "@babel/plugin-syntax-jsx"
        ],
        "presets": [
            "@babel/preset-react",
            [
                "@babel/preset-env",
                {
                    "targets": [
                        "defaults",
                        "not IE 11"
                    ],
                    "corejs": 3,
                    "useBuiltIns": "entry"
                }
            ]
        ]
    }
}
